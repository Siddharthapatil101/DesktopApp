{
  "name": "mdm-security-desktop",
  "version": "1.0.0",
  "description": "MDM Security Desktop Application",
  "main": "main-simple.js",
  "author": "MDM Security",
  "license": "ISC",
  "keywords": [],
  "type": "module",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "dist": "npm run build",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.5.1",
    "bootstrap": "^5.3.2",
    "chart.js": "^4.4.1",
    "cross-env": "^7.0.3",
    "fs-extra": "^11.3.2",
    "moment": "^2.30.1",
    "mongodb": "^6.20.0"
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "electron-log": "^5.4.0",
    "electron-squirrel-startup": "^1.0.1",
    "update-electron-app": "^3.1.1"
  },
  "build": {
    "appId": "com.mdmsecurity.desktop",
    "productName": "MDM Security",
    "copyright": "Copyright Â© 2024 MDM Security",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist{,/**/*}",
      "!build{,/**/*}",
      "!node_modules{,/**/*}",
      "!**/*.map",
      "!**/*.md",
      "!**/*.log",
      "!.git{,/**/*}",
      "!.vscode{,/**/*}",
      "!.idea{,/**/*}"
    ],
    "extraMetadata": {
      "version": "1.0.0"
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "MDM Security",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "deleteAppDataOnUninstall": false
    },
    "mac": {
      "category": "public.app-category.business",
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "darkModeSupport": true,
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "linux": {
      "icon": "build/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        }
      ],
      "category": "Office"
    },
    "publish": {
      "provider": "github",
      "owner": "your-username",
      "repo": "mdm-security"
    }
  }
}
