{
  "name": "mdm-security-desktop",
  "version": "1.0.0",
  "description": "MDM Security Desktop Application",
  "main": "main.js",
 "scripts": {
  "start": "electron .",
  "dist": "electron-builder"
},
  "keywords": [],
  "author": "MDM Security",
  "license": "ISC",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.5.1",
    "bootstrap": "^5.3.2",
    "chart.js": "^4.4.1",
    "moment": "^2.30.1"
  },
  "devDependencies": {
    "electron": "^28.2.3",
    "electron-builder": "^24.13.3",
    "electron-log": "^5.4.0",
    "electron-squirrel-startup": "^1.0.1",
    "update-electron-app": "^3.1.1"
  },
  "build": {
    "appId": "com.mdmsecurity.desktop",
    "productName": "MDM Security",
    "copyright": "Copyright Â© 2024 MDM Security",
    "mac": {
      "category": "public.app-category.business",
      "icon": "build/icon.icns",
      "target": [
        "dmg",
        "zip"
      ],
      "darkModeSupport": true
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "MDM Security"
    },
    "directories": {
      "buildResources": "build",
      "output": "dist"
    }
  }
}
